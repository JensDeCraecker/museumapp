<% include header %>

<h1><a href="/">Home</a></h1>

<h2>Musea items voor categorie <%- categorieen[id] %></h2>

  <% for (var i = 0; i < items.length; i++) { %>
    <% if (items[i].categorieen.indexOf(categorieen[id]) !== -1) { %>
      <section>
          <h2>
            <a href=/items/<%- items[i].id %>><%- items[i].titel %></a>
          </h2>
          <img src="/img/<%- items[i].afbeeldings %>" alt="<%- items[i].titel %>">
          <p><%- items[i].uitvoerder %></p>
          <p><%- items[i].datum %></p>
          <p><%- items[i].locatie %></p>
          <p><%- items[i].beschrijving %></p>


      </section>
    <% } %>
  <% } %>

<% include footer %>
